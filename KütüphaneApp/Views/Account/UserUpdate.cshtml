@model UserUpdateModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Book</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <h1 class="h3">Edit User</h1>
    <hr />
    <form asp-controller="Account" asp-action="UserUpdate" method="post">
        <div class="row">
            <div class="col-md-8">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group row">
                    <label asp-for="UserName" class="col-sm-2 col-form-label">User Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="UserName">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="FirstName">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="LastName">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Email">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2 my-3 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary ">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>