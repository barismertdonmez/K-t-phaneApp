@model BookViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Category List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        img {
            width: 100px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <h1>Admin Categories</h1>
            <hr />
            <div class="row my-2 ">
                <div class="col-md-12 d-flex justify-content-end">
                    <a class="btn btn-primary btn-lg" asp-controller="admin" asp-action="CategoryCreate">Add Category</a>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td style="width:30px;">Id</td>
                        <td style="width:100px;">Name</td>
                        <td style="width:150px;"></td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Categories.Count() > 0)
                    {
                        @foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CategoryName</td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        <a asp-controller="Admin" asp-action="CategoryEdit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                        <form action="/admin/deletecategory" method="post" style="display:inline;">
                                            <input type="hidden" name="Id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger" style="margin-left:10px;">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        @await Html.PartialAsync("_noCategory")
                    }

                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
