@model Data.DataModels.DataBookCategoryModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product</title>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <h1 class="h3">Create Book</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Admin" asp-action="CreateBook" method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group row">
                    <label asp-for="Book.BookName" class="col-sm-3 col-form-label">BookName</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Book.BookName">
                        @*<span asp-validation-for="Name" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Book.WriterName" class="col-sm-3 col-form-label">WriterName</label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="Book.WriterName" value="">
                        @*<span asp-validation-for="Description" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Book.TotalPage" class="col-sm-3 col-form-label">TotalPage</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Book.TotalPage" value="">
                        @*<span asp-validation-for="ImageUrl" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Book.ImageUrl" class="col-sm-3 col-form-label">ImageUrl</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Book.ImageUrl" value="">
                        @*<span asp-validation-for="Price" class="text-danger"></span>*@
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-sm-3 col-form-label">
                        <label>Kategorileri Seçin</label>
                    </div>
                    <div class="col-sm-9">
                        <select class="form-control" id="statesSelect" name="categories" multiple>
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.Id" id="@item.Id">@item.CategoryName</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Save Book</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#statesSelect").select2();
        });
    </script>
}




